{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information"
		}
	},
	"AllowedHosts": "*",
	"IpRateLimiting": {
		"EnableEndpointRateLimiting": false,
		"StackBlockedRequests": false,
		"RealIpHeader": "X-Real-IP",
		"ClientIdHeader": "X-ClientId",
		"HttpStatusCode": 429,
		"IpWhitelist": [ ],
		"EndpointWhitelist": [ ],
		"ClientWhitelist": [ "dev-id-1", "dev-id-2" ],
		"GeneralRules": [
			{
				"Endpoint": "*:/api/*",
				"Period": "5s",
				"Limit": 1
			},
			{
				"Endpoint": "*",
				"Period": "15m",
				"Limit": 100
			},
			{
				"Endpoint": "*",
				"Period": "12h",
				"Limit": 1000
			},
			{
				"Endpoint": "*",
				"Period": "7d",
				"Limit": 10000
			}
		]
	}
}
