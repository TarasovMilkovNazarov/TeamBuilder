{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information"
		}
	},
	"AllowedHosts": "*",
	"ClientRateLimiting": {
		"EnableEndpointRateLimiting": true,
		"ClientIdHeader": "X-ClientId",
		"HttpStatusCode": 429,
		//"EndpointWhitelist": [ "*:/urlexample" ],
		"ClientWhitelist": [ "305046781", "16231745", "252814030" ],
		"GeneralRules": [
			{
				"Endpoint": "*:/api/*",
				"Period": "1s",
				"Limit": 5
			},
			{
				"Endpoint": "*:/hub/notifications/*",
				"Period": "1s",
				"Limit": 5
			},
			{
				"Endpoint": "*",
				"Period": "15m",
				"Limit": 100
			}
		]
	}
}
